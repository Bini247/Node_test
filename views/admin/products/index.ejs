<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <title>Produtos</title>
    <%- include('../../imports'); -%>
    <a href="/public/stylesheets/style.css" type="stylesheet"></a>
</head>
<body>
    <%- include('../../navbar'); -%>

    
    <div class="container">
        <div class="row">
            <h1>Administração de Produtos</h1>
        </div>
        <div class="row mb-2">
            <a href="/admin/products/create" class="btn btn-success">Novo Produto</a>
        </div>
        <div class="row">

            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Preço</th>
                </tr>
                </thead>
                <tbody>
                <% products.forEach((item) => { %>
                    <tr>
                        <th scope="row"><%=item.id%></th>
                        <td><%=item.name%></td>
                        <td><%=item.description%></td>
                        <td>R$<%=item.price%></td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>    
</body>
</html>